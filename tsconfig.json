{
  "compilerOptions": {
    "target": "ES2020",        // phiên bản JS muốn output
    "module": "CommonJS",      // hoặc "ESNext" nếu dùng module ES
    "outDir": "./dist",        // thư mục output
    "rootDir": "./src",        // thư mục source
    "strict": true,            // bật strict mode
    "esModuleInterop": true    // hỗ trợ import default từ module commonjs
  },
  "include": ["src/**/*"]
}
